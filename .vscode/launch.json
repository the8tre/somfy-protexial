  "version": "0.2.0",
  "configurations": [
    {
      "name": "debugpy: Attach Local",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "port": 5678,
        "host": "localhost",
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "."
